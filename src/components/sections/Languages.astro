---
import Section from '../Sections.astro' 
import { languages } from '../../cv.json'
---

<Section title = 'Languages'>
    <ul>
        {
            languages.map(({ language, fluency }) => { 
                return (
                    <article>
                        <header>
                            <div>
                                <h3>{language}</h3>
                                <p>{fluency}</p>
                            </div>
                        </header>
                    </article>
                )
            })
        }
    </ul>
</Section>

<style>
    ul {
        display: flex;
        flex-direction: column;
        gap: 14px;
    }

    article h3 {
        font-weight: 500;
        color: #111;
    }

    header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 4px;
    }
</style>