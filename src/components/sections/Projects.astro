---
import Section from '../Sections.astro' 

import { projects } from '../../cv.json'
---

<Section title = 'Projects'>
    <ul>
        {
            projects.map(({ name, isAtive, description, highlights, url }) => {
                return (
                    <li>
                        <article>
                            <header>
                                <h3>
                                    <a href={url} target="_blank" rel="noopener noreferrer" title={`Watch ${name} on GitHub`}>
                                        {name}
                                    </a>
                                    {
                                        isAtive && <span>&bull;</span>
                                    }
                                </h3>
                                <p>{description}</p>
                            </header>
                            <footer>
                                    {
                                        highlights.map((highlight) => {
                                            return (
                                                <span>{highlight}</span>
                                            )
                                        })
                                    }
                            </footer>
                        </article>
                    </li>
                )
            })
        }
    </ul>
</Section>

<style>
    ul {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 18px;
    }

    article {
        display: flex;
        flex-direction: column;
        gap: 16px;
        border-radius: 8px;
        border: 1px solid #ebebeb;
        padding: 16px;
        height: 100%;
    }

    article > header {
        flex: 1;
    }

    article > header > h3 {
        margin-bottom: 4px;
    }

    article > header > h3 > a {
        color: #111;
    }

    article > header > h3 > a:hover {
        text-decoration: underline;
    }

    article > header > p {
        font-size: 0.8rem;
        line-height: 1.3rem;
        margin-bottom: 4px;
    }

    article > header > h3 > span {
        color: #43f13d;
        width: 16px;
        height: 16px;
    }

    footer {
        display: flex;
        flex-wrap: wrap;
        gap: 4px;
        font-size: 0.6rem;
    }

    footer > span {
        border-radius: 8px;
        background: #eee;
        color: #444;
        font-size: 0.6rem;
        font-weight: 500;
        padding: 0.2rem 0.6rem;
    }
</style>