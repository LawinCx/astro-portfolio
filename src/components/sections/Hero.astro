---
import { basics } from '../../cv.json'
import Section from '../Sections.astro' 
import Mail from '../../icons/Mail.astro'
import Phone from '../../icons/Phone.astro'
import GitHub from '../../icons/GitHub.astro' 
import Linkedin from '../../icons/Linkedin.astro' 
import Instagram from '../../icons/Instagram.astro' 
import WorldMap from '../../icons/WorldMap.astro' 

const { name, label, location, image, profiles, phone, email } = basics
const { city, country } = location

const SOCIAL_ICONS: Record<string, any> = {
    GitHub,
    Linkedin,
    Instagram
}
---

<Section>
    <div class = "hero"> 
        <div class = "info">
            <h1>{name}</h1>
            <h2>{label}</h2>
            <span>
                <WorldMap />
                {city}, {country}.
            </span>
            <footer>
                {
                    email && (
                        <a 
                            href = {`mailto:${email}`}
                            title = {`Send an email to ${email}`}
                            target = "_blank"
                            rel = "noopener noreferrer"
                        >
                            <Mail />
                        </a>
                    )
                }
                {
                    phone && (
                        <a 
                            href = {phone}
                            title = {`Call or send a message to ${phone}`}
                            target = "_blank"
                            rel = "noopener noreferrer"
                        >
                            <Phone />
                        </a>
                    )
                }
                {
                    profiles.map((profile: { network: string; url: string; username: string }) => {
                        const Icon = SOCIAL_ICONS[profile.network]
                        return (
                            <a 
                                href = {profile.url}
                                title = {`Visit ${profile.username} on ${profile.network}`}
                                target = "_blank"
                                rel = "noopener noreferrer"
                            >
                                <Icon />
                            </a>
                        )
                    })
                }
            </footer>
        </div>
        <figure>
            <img src={image} alt={name} />
        </figure>
    </div>
</Section>

<style>
    .hero {
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: space-between;
        gap: 1rem;
    }

    .info {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        padding-right: 32px;
    }

    h1 {
        font-size: 2rem;
    }

    h2 {
        color: #444;
        font-weight: 500;
        font-size: 1.1rem;
        text-wrap: balance;
    }

    img {
        aspect-ratio: 1 / 1;
        object-fit: cover;
        width: 128px;
        border-radius: 6px;
    }

    span {
        display: flex;
        align-items: center;
        gap: 0.3rem;
        font-size: 0.9rem;
        color: #666;
        letter-spacing: -0.05rem;
    }

    footer {
        display: flex;
        gap: 5px;
        margin-top: 8px;
    }

    footer > a {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        color: #777;
        border: 1px solid #eee;
        padding: 4px;
        height: 32px;
        width: 32px;
        border-radius: 6px;
        transition: all 0.3s ease;
    }

    footer a:hover {
        color: #444;
    }
</style>