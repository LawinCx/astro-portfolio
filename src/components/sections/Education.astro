---
import Section from '../Sections.astro' 
import { education, certificates } from '../../cv.json'
---

<Section title = 'Education'>
    <ul>
        {
            education.map(({ institution, area, startDate, endDate }) => {
                const startYear = new Date(startDate).getFullYear()
                const endYear = endDate !== null ? new Date(endDate).getFullYear() : 'Present'
                const years = `${startYear} - ${endYear}`
                const country = `Ecuador`

                return (
                    <article>
                        <header>
                            <div>
                                <h3>{institution}</h3>
                                <p>{area}</p>
                                <p>{country}</p>
                            </div>
                            <time>
                                {years}
                            </time>
                        </header>
                    </article>
                )
            })
        }
        {
            certificates.map(({ name, platform, date }) => {
                // this is for dd/mm/yyyy format
                const [day, month, year] = date.split('/').map(Number)
                // this is for mm/dd/yyyy format
                //const year = new Date(date).getFullYear()

                return (
                    <article>
                        <header>
                            <div>
                                <h3>{name}</h3>
                                <p>{platform}</p>
                            </div>
                            <time>
                                {year}
                            </time>
                        </header>
                    </article>
                )
            })
        }
    </ul>
</Section>

<style>
    ul {
        display: flex;
        flex-direction: column;
        gap: 14px;
    }

    article h3 {
        font-weight: 500;
        color: #111;
    }

    article h4 {
        font-weight: 400;
        color: #333;
    }

    header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 4px;
    }

    time {
        color: #111;
        font-size: 0.85rem;
    }
</style>